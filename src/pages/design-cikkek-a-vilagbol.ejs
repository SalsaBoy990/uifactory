      <% if (newsDataForNewsPage[i].topic[j] === 'webfejlesztés') { %>
      <% found = 1; %>
      <% } %>
      <% } %>
      <% if (found === 1) { %>
      <li>
        <a href="<%= newsDataForNewsPage[i].url %>" rel="noreferrer noopener" target="_blank"><%= newsDataForNewsPage[i].title %></a>
      </li>
      <% found = 0 %>
      <% } %>
      <% } %>
    </ul>

    <h2 class="h4">Redesign videók</h2>
    <% var found = 0; %>
