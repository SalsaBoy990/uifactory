      <% for (var i = 0; i < newsDataForNewsPage.length; i++) { %>
      <% for (var j = 0; j < newsDataForNewsPage[i].topic.length; j++) { %>
      <% if (newsDataForNewsPage[i].topic[j] === 're-design videó') { %>
      <% found = 1; %>
      <% } %>
      <% } %>
      <% if (found === 1) { %>
      <li>
        <a href="<%= newsDataForNewsPage[i].url %>" rel="noreferrer noopener" target="_blank"><%= newsDataForNewsPage[i].title %></a>
      </li>
      <% found = 0 %>
      <% } %>
      <% } %>
    </ul>

  </section>
</div>